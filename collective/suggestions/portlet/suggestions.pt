<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      tal:omit-tag="">
<dl class="portlet portlet-suggestions"
    i18n:domain="collective.suggestions">

    <dt class="portletHeader">
        <span class="portletTopLeft"></span>
        <span
           class="tile"
           i18n:translate=""
           tal:content="view/title" />
        <span class="portletTopRight"></span>
    </dt>

    <tal:items tal:repeat="o view/suggestions_items">
        <dd class="portletItem"
            tal:define="oddrow repeat/o/odd;"
            tal:attributes="class python:oddrow and 'portletItem even' or 'portletItem odd'">

            <a href="#"
               class="tile"
               tal:attributes="href string:${o/url};
                               title o/description;
                               class string:tile ${o/class}">
                <img tal:attributes="src o/icon" tal:condition="o/icon" />
                <span tal:replace="o/title">
                    Title
                </span>
            </a>

        </dd>
    </tal:items>

    <dd class="portletFooter" tal:replace="nothing">
        <span class="portletBottomLeft"></span>
        <span class="portletBottomRight"></span>
    </dd>
</dl>
</html>